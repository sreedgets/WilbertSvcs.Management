@model IEnumerable<WilbertVaultCompany.api.Models.FuneralHomeContact>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<head>
    <title>Dashboard Template</title>

    <link rel="canonical" href="#">

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/sticky-footer.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet">
</head>
<!-- Fixed navbar -->
@await Component.InvokeAsync("Dashboard")

<!-- Begin page content -->
<main role="main" id="fhl" class="container">
    <center>
        <div class="album py-5">
            <div class="container">
                <div class="row">
                    <div class="container">
                        <table>
                            <tbody>
                                <tr align="left">
                                    <td colspan="4"><label class="sectionLabel"></label><h3>Contact Information</h3></td>
                                </tr>
                                @if (Model.Count() != 0)
                                {
                                    <tr align="left" style="color:White;background-color:#00446a;font-weight:bold;">
                                        <th scope="col"><a href="#" style="color:White;">Name</a></th>
                                        <th scope="col"><a href="#" style="color:White;">Title</a></th>
                                        <th scope="col"><a style="color:White;">Phone</a></th>
                                        <th scope="col"><a style="color:White;">&nbsp;</a></th>
                                        <th></th>
                                    </tr>
                                    @foreach (var contact in Model)
                                    {

                                        <tr align="left" style="color:#333333;background-color:#ECECEC;">
                                            <td style="width:18%;">
                                                <label asp-for="@contact.FirstName" class="control-label"> @contact.FirstName</label>
                                            </td>
                                            <td style="width:10%;">
                                                <span>
                                                    <label asp-for="@contact.ContactRole" class="control-label">@contact.ContactRole</label>
                                                </span>
                                            </td>
                                            <td>
                                                <label asp-for="@contact.Phone1">@contact.Phone1</label>
                                            </td>
                                            <td>
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@contact.FuneralHomeContactId" class="btn btn-primary">Edit</a>
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@contact.FuneralHomeContactId" class="btn btn-secondary">Details</a>
                                            </td>
                                            <td>
                                                <a asp-action="Delete" asp-route-id="@contact.FuneralHomeContactId" class="btn btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </center>
</main>

