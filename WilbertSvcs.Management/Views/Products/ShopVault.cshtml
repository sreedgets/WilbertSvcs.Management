@model IEnumerable<WilbertVaultCompany.api.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<head>
    <link rel="canonical" href="#">

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/sticky-footer.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet">
</head>

<header>
    <!-- Fixed navbar -->
    @await Component.InvokeAsync("Dashboard")
</header>

<!-- Begin page content -->
<main role="main" class="container">
    <h1 class="mt-5">Products</h1>
    <center>
            <div class="container">
                <div class="row">
                    <table>
                        <tbody>
                            
                            @if (Model.Count() != 0)
                            {
                            <tr align="left" style="color:White;background-color:#00446a;font-weight:bold;">
                                <th scope="col"><a href="#" style="color:White;">Product</a></th>
                                <th scope="col"><a href="#" style="color:White;">Code</a></th>
                                <th scope="col"><a href="#" style="color:White;">Category</a></th>
                                <th scope="col"><a href="#" style="color:White;">Ovation</a></th>
                                <th scope="col"><a href="#" style="color:White;">Decoration</a></th>
                                <th scope="col"><a href="#" style="color:White;">Legacy</a></th>
                            </tr>



                                @foreach (var item in Model)
                                {
                        <tr style="color:#333333;background-color:#ECECEC;">
                            <td style="width:30%;"><a asp-action="AddToVaultOrder" asp-route-id="@item.ProductId">@Html.DisplayFor(modelItem => item.Description)</a></td>
                            <td style="width:10%;">@Html.DisplayFor(modelItem => item.ProductCode)</td>
                            <td style="width:10%;">@Html.DisplayFor(modelItem => item.ProductCategory)</td>
                            <td style="width:10%;">@Html.DisplayFor(modelItem => item.Ovation)</td>
                            <td style="width:10%;">@Html.DisplayFor(modelItem => item.Decoration)</td>
                            <td style="width:10%;">@Html.DisplayFor(modelItem => item.Legacy)</td>

                        </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
    </center>

</main>