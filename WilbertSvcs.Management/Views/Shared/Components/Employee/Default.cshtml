@model IEnumerable<WilbertVaultCompany.api.Models.Employee>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<table>
    <tbody>
        <tr>
            <td colspan="4"><label class="sectionLabel"></label><h3>Employees Assigned</h3></td>
        </tr>
        @if (Model.Count() != 0)
        {

            <tr align="left" style="color:White;background-color:#00446a;font-weight:bold;">
                <th scope="col"><a href="#" style="color:White;">Name</a></th>
                <th scope="col"><a href="#" style="color:White;">Phone</a></th>
                <th scope="col"><a href="#" style="color:White;">Title</a></th>
                <th scope="col"><a href="#" style="color:White;">&nbsp;</a></th>
            </tr>
            @foreach (var employee in Model)
            {
                <tr style="color:#333333;background-color:#ECECEC;">
                    <td style="width:10%;">@employee.FirstName @employee.LastName</td>
                    <td style="width:10%;">@employee.Phone1</td>
                    <td style="width:10%;">@employee.Title</td>
                    <td style="width:10%;">
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="Employees" asp-route-id="@employee.EmployeeId">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Employees" asp-route-id="@employee.EmployeeId">Delete</a>
                    </td>
                </tr>
            }
        }
        </tbody>
</table>
