@model IEnumerable<WilbertVaultCompany.api.Models.Interaction>
@using WilbertVaultCompany.api.Enums

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<table>
    <tbody>
        <tr align="left">
            <td colspan="4"><label class="sectionLabel"></label><h3>Interactions</h3></td>
        </tr>
        @if (Model.Count() != 0)
        {
            <tr align="left" style="color:White;background-color:#00446a;font-weight:bold;">
                <th width="200" scope="col"><a href="#" style="color:White;">Date</a></th>
                <th width="350" scope="col" style="color:White;">Nature of Contact</th>
                <th width="300" scope="col" style="color:White;">Follow Up Date</th>
                <th width="300" scope="col" style="color:White;">Completed</th>
                <th></th>

            </tr>
            @foreach (var item in Model)
            {

                <tr align="left" style="color:#333333;background-color:#ECECEC;">
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Date"
                           asp-controller="FuneralHomeContacts">@Html.DisplayFor(modelItem => item.Date)</a>

                    </td>
                    <td>
                        <span>
                            <label asp-for="@item.Nature" class="control-label">@item.Nature</label>
                        </span>
                    </td>
                    <td>
                        <label asp-for="@item.FollowUpDate">@item.FollowUpDate</label>
                    </td>
                    <td>
                        <label asp-for="@item.Completed">@item.Completed</label>
                    </td>
                    @*<td>
                        <a asp-action="Delete" asp-controller="Interactions" asp-route-id="@item.InteractionId" class="btn btn-danger">Delete</a>
                    </td>*@
                </tr>
            }
        }
    </tbody>
</table>