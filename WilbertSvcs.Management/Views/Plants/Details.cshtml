@model WilbertVaultCompany.api.Models.Plant

@{
    ViewData["Title"] = "Details";
}


<head>
    <link rel="canonical" href="#">

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/sticky-footer.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet">
</head>

<header>
    <!-- Fixed navbar -->
    @await Component.InvokeAsync("Dashboard")
</header>

<!-- Begin page content -->
<main role="main" class="container">
    <h1 class="mt-5">Plant Details</h1>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.PlantId">Edit Plant</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.PlantId">Delete Entry</a>
    <a class="btn btn-primary" asp-action="Index">Go Back</a>
    <br />
    <h2 style="margin: 0 auto;color:#e65500!important;">@Model.PlantName</h2>
    <hr class="vertical-space4">

    <center>
        <div class="album py-5">
            <div class="container">
                <div class="row">

                    <div class="col-md-6">
                        <table>
                            <tbody>
                                <tr>
                                    <th><label class="sectionLabel" style="width:250px;"></label><h3>Plant Information</h3></th>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="titleLabel" asp-for="PlantName"></label>
                                    </td>
                                    <td>
                                        <input readonly asp-for="PlantName" maxlength="100" tabindex="1" style="width:300px;" />

                                        <span asp-validation-for="PlantName" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="titleLabel" asp-for="Address"></label>
                                    </td>
                                    <td>
                                        <input readonly asp-for="Address" maxlength="100" tabindex="1" style="width:300px;" />

                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="titleLabel" asp-for="Address2"></label>
                                    </td>
                                    <td>
                                        <input readonly asp-for="Address2" maxlength="100" tabindex="1" style="width:300px;" />

                                        <span asp-validation-for="Address2" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="titleLabel" asp-for="City"></label>
                                    </td>
                                    <td>
                                        <input readonly asp-for="City" maxlength="100" tabindex="1" style="width:300px;" />

                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="titleLabel" asp-for="State"></label>
                                    </td>
                                    <td>
                                        <input readonly asp-for="State" maxlength="100" tabindex="1" style="width:300px;" />

                                        <span asp-validation-for="State" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="titleLabel" asp-for="ZipCode"></label>
                                    </td>
                                    <td>
                                        <input readonly asp-for="ZipCode" maxlength="100" tabindex="1" style="width:300px;" />

                                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="titleLabel" asp-for="County"></label>
                                    </td>
                                    <td>
                                        <input readonly asp-for="County" maxlength="100" tabindex="1" style="width:300px;" />

                                        <span asp-validation-for="County" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="titleLabel" asp-for="Phone1">Phone (Business)</label>
                                    </td>
                                    <td>
                                        <input readonly asp-for="Phone1" maxlength="100" tabindex="1" style="width:300px;" />

                                        <span asp-validation-for="Phone1" class="text-danger"></span>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table>
                            <tbody>
                                <tr>
                                    <th><label class="sectionLabel" style="width:300px;"></label><h3>Plant Manager Information</h3></th>
                                    <td>&nbsp;</td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="titleLabel" asp-for="PlantManager"></label>
                                    </td>
                                    <td>
                                        <input readonly asp-for="PlantManager" maxlength="100" tabindex="1" style="width:300px;" />

                                        <span asp-validation-for="PlantManager" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="titleLabel" asp-for="PlantManagerEmail"></label>
                                    </td>
                                    <td>
                                        <input readonly asp-for="PlantManagerEmail" maxlength="100" tabindex="1" style="width:300px;" />

                                        <span asp-validation-for="PlantManagerEmail" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="titleLabel" asp-for="Phone2">Cell Phone</label>
                                    </td>
                                    <td>
                                        <input readonly asp-for="Phone2" maxlength="100" tabindex="1" style="width:300px;" />

                                        <span asp-validation-for="Phone2" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <label class="titleLabel" asp-for="PlantManagerTxtNum"></label>
                                    </td>
                                    <td>
                                        <input readonly asp-for="PlantManagerTxtNum" maxlength="100" tabindex="1" style="width:300px;" />

                                        <span asp-validation-for="PlantManagerTxtNum" class="text-danger"></span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
                <hr style="border: 5px solid #00446a; border-radius: 5px;" />
                @await Component.InvokeAsync("Employee", Model.PlantId)
                <br />
                <div>
                    <table>
                        <tr align="left">
                            <td>
                                <a asp-action="Create" asp-controller="Employees" asp-route-id="@Model.PlantId" class="btn btn-primary">ADD EMPLOYEE</a>
                            </td>
                        </tr>
                    </table>
                </div>
                <hr style="border: 5px solid #00446a; border-radius: 5px;" />
                @await Component.InvokeAsync("Trucks", Model.PlantId)
                <br />
                <div>
                    <table>
                        <tr align="left">
                            <td>
                                <a asp-action="Create" asp-controller="Trucks" asp-route-id="@Model.PlantId" class="btn btn-primary">ADD TRUCK</a>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </center>
</main>

