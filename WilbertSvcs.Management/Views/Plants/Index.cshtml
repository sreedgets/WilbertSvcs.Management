@model IEnumerable<WilbertVaultCompany.api.Models.Plant>

@{
    ViewData["Title"] = "Index";
}

<head>
    <title>Dashboard Template</title>

    <link rel="canonical" href="#">

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/sticky-footer.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet">
</head>
<!-- Fixed navbar -->
@await Component.InvokeAsync("Dashboard")

<!-- Begin page content -->
<main role="main" class="container">
    <center>
        <div class="album py-5">
            <div class="container">
                <div class="row">
                    <div class="container">
                        <h1 class="py-5">Plants List</h1>
                        <div class="row">
                            <div class="col-md-6" style="text-align:right;">
                                <a asp-action="Create" class="btn btn-primary">ADD NEW PLANT</a>
                            </div>
                            <div class="col-md-6" style="text-align:left;">
                                <a asp-action="Dashboard" asp-controller="Home" class="btn btn-primary">BACK TO DASHBOARD</a>
                            </div>
                        </div>
                        <!--Page Actions -->
                        <br />
                        <br />
                        <table>
                            <thead>
                                <tr align="left" style="color:White;background-color:#00446a;font-weight:bold;">
                                    <th scope="col" width="500"><a href="#" style="color:White;">Plant Name</a></th>
                                    <th scope="col" width="300">Phone Number</th>
                                    <th scope="col" width="300">Pant Manager</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.PlantId">@Html.DisplayFor(modelItem => item.PlantName)</a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Phone1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PlantManager)
                                        </td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>             
                    </div>
                </div>
            </div>
        </div>
    </center>
</main>
<main role="main" class="container">
    <div class="album py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6" style="text-align:right;">
                    <a class="btn btn-primary" href="#">Prev</a>
                </div>
                <div class="col-md-6" style="text-align:left;">
                    <a class="btn btn-primary" href="#">Next</a>
                </div>
            </div>
        </div>
    </div>
</main>