@model WilbertVaultCompany.api.Models.Cemetary
@using WilbertVaultCompany.api.Enums

@{
    ViewData["Title"] = "Create";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.1/assets/img/favicons/favicon.ico">

    <title>Login Template for Bootstrap</title>

    <link rel="canonical" href="#">

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/sticky-footer.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet">
</head>

<header>
    <!-- Fixed navbar -->
    @await Component.InvokeAsync("Dashboard")
</header>

<!-- Begin page content -->
<main role="main" id="fhd" class="container">
    <center>
        <form asp-action="Create" method="post">
            <div class="album py-5">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <table>
                                <tbody>
                                    <tr>
                                        <th><label class="sectionLabel"></label><h3>General Information</h3></th>
                                        <td>&nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="Name"></label>
                                        </td>
                                        <td>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="Address"></label>
                                        </td>
                                        <td>
                                            <input asp-for="Address" class="form-control" />
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="Address2"></label>
                                        </td>
                                        <td>
                                            <input asp-for="Address2" class="form-control" />
                                            <span asp-validation-for="Address2" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="City"></label>
                                        </td>
                                        <td>
                                            <input asp-for="City" class="form-control" />
                                            <span asp-validation-for="City" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="State"></label>
                                        </td>
                                        <td>
                                            <select asp-for="State" maxlength="100" tabindex="1" style="width:300px;"
                                                    asp-items="Html.GetEnumSelectList<States>()"></select>
                                            <span asp-validation-for="State" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="ZipCode"></label>
                                        </td>
                                        <td>
                                            <input asp-for="ZipCode" type="text" class="form-control" />
                                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="County"></label>
                                        </td>
                                        <td>
                                            <input asp-for="County" class="form-control" />
                                            <span asp-validation-for="County" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>

                                            <label asp-for="Phone1"></label>
                                        </td>
                                        <td>
                                            <input asp-for="Phone1" class="form-control" placeholder="xxx-xxx-xxxx" onkeydown="phoneOnKeyDown(this);"
                                                   onblur="phoneOnBlur(this);" />
                                            <span asp-validation-for="Phone1" class="text-danger"></span>

                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                            <select asp-for="PhoneType1" class="form-control" style="width:300px;" asp-items="Html.GetEnumSelectList<PhoneType>()"></select>
                                            <span asp-validation-for="PhoneType1" class="text-danger"></span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table>
                                <tbody>
                                    <tr>
                                        <td><label class="sectionLabel"></label><h3>Additional Information</h3></td>
                                        <td>&nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="PlantId"></label>
                                        </td>
                                        <td>
                                            <select asp-for="PlantId" class="form-control"
                                                    asp-items="@(new SelectList(Model.Plants,"PlantId","PlantName"))">
                                            </select>
                                            <span asp-validation-for="PlantId" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="Lattitude"></label>
                                        </td>
                                        <td>
                                            <input asp-for="Lattitude" class="form-control" />
                                            <span asp-validation-for="Lattitude" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="Longitude"></label>
                                        </td>
                                        <td>
                                            <input asp-for="Longitude" class="form-control" />
                                            <span asp-validation-for="Longitude" class="text-danger"></span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <hr style="border: 1px solid #00446a; border-radius: 1px;" />
                    <hr class="vertical-space3" />
                    <div>
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </center>
</main>

@section WilbertScripts {
    <script src="/Wilbert/lib/jquery/jquery.min.js"></script>
    <script src="/Wilbert/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">
        function phoneOnKeyDown(phoneTextBox) {
            if (phoneTextBox.value == 'xxx-xxx-xxxx') {
                phoneTextBox.value = '';
                phoneTextBox.style['color'] = 'black';
            }
        }

        function phoneOnBlur(phoneTextBox) {
            if (phoneTextBox.value.trim().length == 0) {
                phoneTextBox.value = 'xxx-xxx-xxxx';
                phoneTextBox.style['color'] = 'silver';
            } else {

                if (phoneTextBox.value.trim().length == 6) {  // 062019
                    phoneTextBox.value = phoneTextBox.value.substring(0, 2) + "/" + phoneTextBox.value.substr(2, 4);

                }
            }
        }
    </script>
