@model WilbertVaultCompany.api.Models.Employee
@using WilbertVaultCompany.api.Enums

@{
    ViewData["Title"] = "Create";
}

<head>
    <title>Dashboard Template</title>

    <link rel="canonical" href="#">

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/sticky-footer.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet">
</head>

<header>
    <!-- Fixed navbar -->
    @await Component.InvokeAsync("Dashboard")
</header>

<!-- Begin page content -->
<main role="main" class="action">
    <center>
        <form asp-action="Create" method="post">
            <div class="album py-5">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <br />
                            <table>
                                <tbody>
                                    <tr>
                                        <td><label class="sectionLabel"></label><h3>Employee Information</h3></td>
                                        <td>&nbsp;</td>
                                    </tr>

                                    <tr>
                                        <td>
                                            <label class="titleLabel" asp-for="FirstName"></label>
                                        </td>
                                        <td>
                                            <input asp-for="FirstName" maxlength="100" tabindex="1" style="width:300px;" />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="titleLabel" asp-for="LastName"></label>
                                        </td>
                                        <td>
                                            <input asp-for="LastName" maxlength="100" tabindex="1" style="width:300px;" />

                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="titleLabel" asp-for="Phone1"></label>
                                        </td>
                                        <td>
                                            <input asp-for="Phone1" maxlength="100" tabindex="1" style="width:300px;" />
                                            <span asp-validation-for="Phone1" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="titleLabel" asp-for="PhoneType1"></label>
                                        </td>
                                        <td>
                                            <select asp-for="PhoneType1" class="form-control" style="width:300px;" asp-items="Html.GetEnumSelectList<PhoneType>()"></select>
                                            <span asp-validation-for="PhoneType1" class="text-danger"></span>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="titleLabel" asp-for="Email"></label>
                                        </td>
                                        <td>
                                            <input asp-for="Email" maxlength="100" tabindex="1" style="width:300px;" />

                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="titleLabel" asp-for="Title"></label>
                                        </td>
                                        <td>
                                            <select asp-for="Title" maxlength="100" tabindex="1" style="width:300px;" asp-items="Html.GetEnumSelectList<PlantRole>()"></select>
                                            <span asp-validation-for="Title" class="text-danger"></span>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>

                        </div>
                        <div class="col-md-6">
                            <table>
                                <tbody>
                                    <tr>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="PlantId">Assigned Plant</label>
                                        </td>
                                        <td>
                                            <select asp-for="PlantId" class="form-control" asp-items="@(new SelectList(Model.Plants,"PlantId","PlantName"))">
                                                Assigned Plant
                                            </select>
                                            <span asp-validation-for="PlantId" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="titleLabel" asp-for="Address"></label>
                                        </td>
                                        <td>
                                            <input asp-for="Address" maxlength="100" tabindex="1" style="width:300px;" />

                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="titleLabel" asp-for="City"></label>
                                        </td>
                                        <td>
                                            <input asp-for="City" maxlength="100" tabindex="1" style="width:300px;" />

                                            <span asp-validation-for="City" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="titleLabel" asp-for="State"></label>
                                        </td>
                                        <td>
                                            <select asp-for="State" maxlength="100" tabindex="1" style="width:300px;" asp-items="Html.GetEnumSelectList<States>()"></select>
                                            <span asp-validation-for="State" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="titleLabel" asp-for="ZipCode"></label>
                                        </td>
                                        <td>
                                            <input asp-for="ZipCode" maxlength="100" tabindex="1" style="width:300px;" />

                                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="titleLabel" asp-for="Active"></label>
                                        </td>
                                        <td>
                                            @foreach (var item in Model.Answers)
                                            {
                                                <input asp-for="SelectedAnswer" type="radio" value="@item.Id" /> @item.Answer
                                            }
                                            <span asp-validation-for="Active" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="titleLabel" asp-for="CanDoFollowUps"></label>
                                        </td>
                                        <td>
                                            <input asp-for="CanDoFollowUps" maxlength="100" tabindex="1" style="width:300px;" />

                                            <span asp-validation-for="CanDoFollowUps" class="text-danger"></span>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <hr />
                    <div>
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </center>
</main>
