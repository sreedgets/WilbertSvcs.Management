@model WilbertVaultCompany.api.Models.VaultOrder
@using WilbertVaultCompany.api.Enums
@{
    ViewData["Title"] = "Create";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.1/assets/img/favicons/favicon.ico">

    <title>Login Template for Bootstrap</title>

    <link rel="canonical" href="#">

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/sticky-footer.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet">

    <!-- Special version of Bootstrap that only affects content wrapped in .bootstrap-iso -->
    <link rel="stylesheet" href="https://formden.com/static/cdn/bootstrap-iso.css" />

    <!--Font Awesome (added because you use icons in your prepend/append)-->
    <link rel="stylesheet" href="https://formden.com/static/cdn/font-awesome/4.4.0/css/font-awesome.min.css" />

</head>


<header>
    <!-- Fixed navbar -->
    @await Component.InvokeAsync("Dashboard")
</header>

<!-- Begin page content -->
<main role="main" id="fhd" class="container">
    <center>
        <form asp-action="Create" method="post">
            <div class="album py-5">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <table>
                                <tbody>
                                    <tr>
                                        <th><label class="sectionLabel"></label><h3>Funeral Information</h3></th>
                                        <td>&nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="Status"></label>
                                        </td>
                                        <td>
                                            <select asp-for="Status" maxlength="100" tabindex="1" style="width:300px;" asp-items="Html.GetEnumSelectList<OrderStatus>()"></select>
                                            <span asp-validation-for="Status" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="FuneralDate"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="FuneralDate" class="form-control" placeholder="MM/DD/YYYY" type="text" value="" />
                                            <span asp-validation-for="FuneralDate" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="CemetaryTime"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="CemetaryTime" class="form-control" />
                                            <span asp-validation-for="CemetaryTime" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="Location"></label>
                                        </td>
                                        <td>
                                            <select asp-for="Location" maxlength="100" tabindex="1" style="width:300px;" asp-items="Html.GetEnumSelectList<FuneralLocation>()"></select>
                                            <span asp-validation-for="Location" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="OrderingPlantId"></label>
                                        </td>
                                        <td>
                                            <select asp-for="OrderingPlantId" class="form-control" style="height:30px" asp-items="@(new SelectList(Model.OrderingPlant,"PlantId","PlantName"))">
                                            </select>
                                            <span asp-validation-for="OrderingPlantId" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="DeliveringPlantId"></label>
                                        </td>
                                        <td>
                                            <select asp-for="DeliveringPlantId" class="form-control" style="height:30px" asp-items="@(new SelectList(Model.DeliveringPlant,"PlantId","PlantName"))">
                                            </select>
                                            <span asp-validation-for="DeliveringPlantId" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="ZipCode"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="ZipCode" class="form-control" />
                                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="FuneralHomeId"></label>
                                        </td>
                                        <td>
                                            <select asp-for="FuneralHomeId" class="form-control" style="height:30px" asp-items="@(new SelectList(Model.FuneralHomes,"FuneralHomeId","Name"))">
                                            </select>
                                            <span asp-validation-for="FuneralHomeId" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="funeralhome.FuneralHomeContactId">FH Director</label>
                                        </td>
                                        <td>
                                            <select asp-for="funeralhome.FuneralHomeContactId" class="form-control" style="height:30px" asp-items="@(new SelectList(Model.funeralhome.Contacts,"FuneralHomeContactId","FullName"))">
                                            </select>
                                            <span asp-validation-for="funeralhome.FuneralHomeContactId" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="CemetaryId"></label>
                                        </td>
                                        <td>
                                            <select asp-for="CemetaryId" class="form-control" style="height:30px" asp-items="@(new SelectList(Model.lstCemetaries,"CemetaryId","Name"))">
                                            </select>
                                            <span asp-validation-for="CemetaryId" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="GraveLocationSection"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="GraveLocationSection" class="form-control" />
                                            <span asp-validation-for="GraveLocationSection" class="text-danger"></span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table>
                                <tbody>
                                    <tr>
                                        <td><label class="sectionLabel"></label><h3>Deceased Information</h3></td>
                                        <td>&nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="theDeceased.Salutation"></label>
                                        </td>

                                        <td>
                                            <select asp-for="theDeceased.Salutation" maxlength="100" tabindex="1" style="width:300px;" asp-items="Html.GetEnumSelectList<Salutations>()"></select>
                                            <span asp-validation-for="theDeceased.Salutation" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="theDeceased.FirstName"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="theDeceased.FirstName" class="form-control" />
                                            <span asp-validation-for="theDeceased.FirstName" class="text-danger"></span>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="theDeceased.MiddleName"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="theDeceased.MiddleName" class="form-control" />
                                            <span asp-validation-for="theDeceased.MiddleName" class="text-danger"></span>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="theDeceased.LastName"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="theDeceased.LastName" class="form-control" />
                                            <span asp-validation-for="theDeceased.LastName" class="text-danger"></span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            <label asp-for="theDeceased.Suffix"></label>
                                        </td>
                                        <td>
                                            <select asp-for="theDeceased.Suffix" maxlength="100" tabindex="1" style="width:300px;" asp-items="Html.GetEnumSelectList<Suffix>()"></select>
                                            <span asp-validation-for=" theDeceased.Suffix" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="theDeceased.BornDate"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="theDeceased.BornDate" class="form-control" placeholder="MM/DD/YYYY" type="text" value="" />
                                            <span asp-validation-for="theDeceased.BornDate" class="text-danger"></span>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="theDeceased.DiedDate"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="theDeceased.DiedDate" class="form-control" placeholder="MM/DD/YYYY" type="text" value="" />
                                            <span asp-validation-for="theDeceased.DiedDate" class="text-danger"></span>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="theDeceased.FullName"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="theDeceased.FullName" class="form-control" />
                                            <span asp-validation-for="theDeceased.FullName" class="text-danger"></span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <hr class="vertical-space3">
                            <table>
                                <tbody>
                                    <tr>
                                        <td colspan="4" align="left"><label class="sectionLabel"></label><h3>Additional Notes</h3></td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <label asp-for="Notes"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="Notes" class="form-control" />
                                            <span asp-validation-for="Notes" class="text-danger"></span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div>
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </center>
</main>
@section WilbertScripts {
    <!-- Extra JavaScript/CSS added manually in "Settings" tab -->
    <!-- Include jQuery -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>

    <!-- Include Date Range Picker -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />

    <script>
        $(document).ready(function () {
            var funeralDate = $('input[name="FuneralDate"]'); // our date input has the name "date"
            var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
            funeralDate.datepicker({
                format: 'mm/dd/yyyy',
                container: container,
                todayHighlight: true,
                autoclose: true,
            })

            var cemetery = $('input[name="CemetaryTime"]');
            cemetery.datepicker({
                format: 'mm/dd/yyyy',
                container: container,
                todayHighlight: true,
                autoclose: true,
            })

            var born = $('input[name="theDeceased.BornDate"]');
            born.datepicker({
                format: 'mm/dd/yyyy',
                container: container,
                todayHighlight: true,
                autoclose: true,
            })

            var died = $('input[name="theDeceased.DiedDate"]');
            died.datepicker({
                format: 'mm/dd/yyyy',
                container: container,
                todayHighlight: true,
                autoclose: true,
            })

        })
    </script>
    <partial name="_ValidationScriptsPartial" />
}
