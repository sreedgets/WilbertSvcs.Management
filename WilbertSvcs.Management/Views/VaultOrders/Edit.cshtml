@model WilbertVaultCompany.api.Models.VaultOrder
@using WilbertVaultCompany.api.Enums

@{
    ViewData["Title"] = "Edit";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.1/assets/img/favicons/favicon.ico">

    <title>Funeral Home</title>

    <link rel="canonical" href="#">
    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/sticky-footer.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet">
</head>

<header>
    <!-- Fixed navbar -->
    @await Component.InvokeAsync("Dashboard")
</header>

<!-- Begin page content -->
<main role="main" id="fhd" class="container">
    <center>
        <form asp-action="Edit" method="post">
            <div class="album py-5">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <input type="hidden" asp-for="VaultOrderId" />
                            <input type="hidden" asp-for="VaultId" />
                            <table>
                                <tbody>
                                    <tr>
                                        <th><label class="sectionLabel"></label><h3>Funeral Information</h3></th>
                                        <td>&nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="Status"></label>
                                        </td>
                                        <td>
                                            <select asp-for="Status" maxlength="100" tabindex="1" style="width:300px;" asp-items="Html.GetEnumSelectList<OrderStatus>()"></select>
                                            <span asp-validation-for="Status" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="FuneralDate"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="FuneralDate" class="form-control" type="text" />
                                            <span asp-validation-for="FuneralDate" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="CemetaryTime"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="CemetaryTime" class="form-control" />
                                            <span asp-validation-for="CemetaryTime" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="Location"></label>
                                        </td>
                                        <td>
                                            <select asp-for="Location" maxlength="100" tabindex="1" style="width:300px;" asp-items="Html.GetEnumSelectList<FuneralLocation>()"></select>
                                            <span asp-validation-for="Location" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="OrderingPlantId"></label>
                                        </td>
                                        <td>
                                            <select asp-for="OrderingPlantId" class="form-control" style="height:30px" asp-items="@(new SelectList(Model.OrderingPlant,"PlantId","PlantName"))">
                                            </select>
                                            <span asp-validation-for="OrderingPlantId" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="DeliveringPlantId"></label>
                                        </td>
                                        <td>
                                            <select asp-for="DeliveringPlantId" class="form-control" style="height:30px" asp-items="@(new SelectList(Model.DeliveringPlant,"PlantId","PlantName"))">
                                            </select>
                                            <span asp-validation-for="DeliveringPlantId" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="ZipCode"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="ZipCode" class="form-control" />
                                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="FuneralHomeId"></label>
                                        </td>
                                        <td>
                                            <select asp-for="FuneralHomeId" class="form-control" style="height:30px" asp-items="@(new SelectList(Model.FuneralHomes,"FuneralHomeId","Name"))">
                                            </select>
                                            <span asp-validation-for="FuneralHomeId" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="FuneralHomeContactId">FH Director</label>
                                        </td>
                                        <td>
                                            <select asp-for="FuneralHomeContactId" class="form-control" style="height:30px" 
                                                    asp-items="@(new SelectList(Model.Contacts,"FuneralHomeContactId","FullName"))">
                                            </select>
                                            <span asp-validation-for="FuneralHomeContactId" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="CemetaryId"></label>
                                        </td>
                                        <td>
                                            <select asp-for="CemetaryId" class="form-control" style="height:30px" asp-items="@(new SelectList(Model.lstCemetaries,"CemetaryId","Name"))">
                                            </select>
                                            <span asp-validation-for="CemetaryId" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="GraveLocationSection"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="GraveLocationSection" class="form-control" />
                                            <span asp-validation-for="GraveLocationSection" class="text-danger"></span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table>
                                <tbody>
                                    <tr>
                                        <td><label class="sectionLabel"></label><h3>Deceased Information</h3></td>
                                        <td>&nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="Salutation"></label>
                                        </td>

                                        <td>
                                            <select asp-for="Salutation" maxlength="100" tabindex="1" style="width:300px;" asp-items="Html.GetEnumSelectList<Salutations>()"></select>
                                            <span asp-validation-for="Salutation" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="FirstName"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="FirstName" class="form-control" />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="MiddleName"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="MiddleName" class="form-control" />
                                            <span asp-validation-for="MiddleName" class="text-danger"></span>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="LastName"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="LastName" class="form-control" />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            <label asp-for="Suffix"></label>
                                        </td>
                                        <td>
                                            <select asp-for="Suffix" maxlength="100" tabindex="1" style="width:300px;" asp-items="Html.GetEnumSelectList<Suffix>()"></select>
                                            <span asp-validation-for=" Suffix" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="BornDate"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="BornDate" class="form-control" type="text" />
                                            <span asp-validation-for="BornDate" class="text-danger"></span>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="DiedDate"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="DiedDate" type="text" />
                                            <span asp-validation-for="DiedDate" class="text-danger"></span>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>
                                            <label asp-for="FullName"></label>
                                        </td>
                                        <td>
                                            <input maxlength="100" style="width:300px;" asp-for="FullName" class="form-control" />
                                            <span asp-validation-for="FullName" class="text-danger"></span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <hr class="vertical-space3">
                        </div>
                    </div>
                    <hr style="border: 5px solid #00446a; border-radius: 5px;" />
                    <div class="container">
                        <div class="row">
                            <table>
                                <tbody>
                                    <tr>
                                        <td colspan="4"><label class="sectionLabel"></label><h3>Funeral Director Requests</h3></td>
                                    </tr>
                                    <tr>
                                        <td class="form-group form-check">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="TentWith6Chairs" />
                                                Tent With Six Chairs
                                            </label>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><label class="titleLabel">No of Extra Chairs:</label></td>
                                        <td>
                                            <input asp-for="ExtraChairs" type="text" class="form-control" />
                                        </td>

                                    </tr>
                                    <tr style="display: inline-block; margin-right: 20px;">
                                        <td colspan="2">
                                        <td class="form-group form-check">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="RegisterStand" />
                                                Register Stand
                                            </label>
                                        </td>
                                        <td class="form-group form-check">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="MilitarySetup" />
                                                Military Setup
                                            </label>
                                        </td>
                                        <td class="form-group form-check">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="AwningOverCasket" />
                                                Awning Over Casket
                                            </label>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><label class="titleLabel">FHD Special Request:</label></td>
                                        <td>
                                            <textarea asp-for="Fdrequest" rows="5" cols="50" class="form-control"></textarea>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><label class="titleLabel">Order Notes:</label></td>
                                        <td>
                                            <textarea asp-for="VaultOrderNotes" rows="5" cols="50" class="form-control"></textarea>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div>
                        <input type="submit" value="Save Vault Order" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </center>
</main>
@section WilbertScripts {
    <!-- Extra JavaScript/CSS added manually in "Settings" tab -->
    <!-- Include jQuery -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>

    <!-- Include Date Range Picker -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />

    <script>
        $(document).ready(function () {
            var funeralDate = $('input[name="FuneralDate"]'); // our date input has the name "date"
            var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
            funeralDate.datepicker({
                format: 'mm/dd/yyyy',
                container: container,
                todayHighlight: true,
                autoclose: true,
            })

            //var cemetery = $('input[name="CemetaryTime"]');
            //cemetery.datepicker({
            //    format: 'hh:mm',
            //    container: container,
            //    todayHighlight: true,
            //    autoclose: true,
            //})

            var born = $('input[name="BornDate"]');
            born.datepicker({
                format: 'mm/dd/yyyy',
                container: container,
                todayHighlight: true,
                autoclose: true,
            })

            var died = $('input[name="DiedDate"]');
            died.datepicker({
                format: 'mm/dd/yyyy',
                container: container,
                todayHighlight: true,
                autoclose: true,
            })

        })
    </script>
    <partial name="_ValidationScriptsPartial" />
}
