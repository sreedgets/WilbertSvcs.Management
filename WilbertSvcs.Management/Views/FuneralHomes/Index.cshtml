@model IEnumerable<WilbertVaultCompany.api.Models.FuneralHome>

@{
    ViewData["Title"] = "Index";
}

<head>
    <title>Dashboard Template</title>

    <link rel="canonical" href="#">

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/sticky-footer.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet">
</head>
<!-- Fixed navbar -->
@await Component.InvokeAsync("Dashboard")
<br />
<br />
<br />

<!-- Begin page content -->
<main role="main" class="container">
    <center>
        <a asp-action="Create" class="btn btn-secondary">Create a Funeral Home</a>


        <table class="table">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ParentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Plant)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Phone1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Plant.PlantName)
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.FuneralHomeId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.FuneralHomeId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.FuneralHomeId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </center>
    </main>



