                @Html.DisplayFor(modelItem => item.plant.PlantName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.County)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FuneralHomeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FuneralHomeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FuneralHomeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
